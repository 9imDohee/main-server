{
  "kind": "collectionType",
  "collectionName": "reviews",
  "info": {
    "singularName": "review",
    "pluralName": "reviews",
    "displayName": "Review"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "user": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "reviews"
    },
    "pets": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::pet.pet",
      "mappedBy": "review"
    },
    "body": {
      "type": "text"
    },
    "reviewPhotos": {
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ],
      "type": "media",
      "multiple": true
    },
    "star": {
      "type": "integer",
      "max": 5,
      "min": 0
    }
  }
}
